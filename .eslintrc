{
  "extends": [
    "@imaginary-cloud/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "document": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-param-reassign": 0,
    "class-methods-use-this": "off",
    "react/prop-types": "off",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreComments": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-alert": "off",
    "no-console": "off",
    "no-debugger": "off"
  }
}
